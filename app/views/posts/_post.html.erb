<div class="col-3 my-2 mx-2">
  <div class="card" style="width: 18rem;">
    <%= image_tag 'demo.svg', class: "card-img-top", alt:"Post image" %>
    <div class="card-body">
      <h5 class="card-title"><%=post.title%></h5>
      <% if logged_in?%>
        <small>by: <%= current_user.name%></small>
      <%end%>
      <p class="card-text"><%=truncate(post.content, length:100)%></p>
      <a href="<%= user_post_path(post.user_id,post)%>" class="btn btn-link">Read more</a>
    </div>
  </div>
</div>